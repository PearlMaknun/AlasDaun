<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/alasdaun"
        android:scaleType="fitXY"
        android:alpha="0.9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang!"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textColor="@color/colorPrimary"
            android:background="#75ffffff"
            android:padding="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <ImageButton
            android:onClick="Menu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_restaurant_menu_24dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:onClick="Peta"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_map_24dp"
                android:layout_marginRight="10dp"
                />

            <ImageButton
                android:onClick="Telefon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_local_phone_24dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Versi 1.0"
        android:textColor="@color/colorPrimary"
        android:background="#75ffffff"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"/>

</RelativeLayout>