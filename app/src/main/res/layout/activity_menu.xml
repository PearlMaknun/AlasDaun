<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@color/colorAccent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="MAKANAN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="#ffffff"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/ayamgeprek"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="10dp"
                    android:thicknessRatio="1.9"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:src="@drawable/ayam"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="3dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Ayam Geprek"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Rp. 10.000,-"/>

                        <TextView
                            android:id="@+id/jml_ayam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:text="0"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/ikanbakar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:innerRadius="10dp"
                    android:thicknessRatio="1.9"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ikanbakar"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="3dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Ikan Bakar"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Rp. 26.000,-"/>

                        <TextView
                            android:id="@+id/jml_ikan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:text="0"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/nasikomplit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:innerRadius="10dp"
                    android:thicknessRatio="1.9"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/nasikomplit"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="3dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Nasi Komplit"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Rp. 16.000,-"/>

                        <TextView
                            android:id="@+id/jml_nasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:text="0"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MINUMAN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="#ffffff"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/greettea"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="10dp"
                    android:thicknessRatio="1.9"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/greenthaitea"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="3dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Green Thai Tea"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Rp. 10.000,-"/>
                        <TextView
                            android:id="@+id/jml_green"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:text="0"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/esteh"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:innerRadius="10dp"
                    android:thicknessRatio="1.9"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/esteh"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="3dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Es Teh"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Rp. 6.000,-"/>

                        <TextView
                            android:id="@+id/jml_esteh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:text="0"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/kopiirlandia"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    android:innerRadius="10dp"
                    android:thicknessRatio="1.9"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:padding="5dp"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/kopiirlandia"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="3dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Kopi Irlandia"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Rp. 15.000,-"/>

                        <TextView
                            android:id="@+id/jml_kopi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:text="0"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/aksipesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="CHECKOUT"
        android:layout_margin="10dp"
        android:textColor="@color/putih"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:shadowColor="@color/colorPrimaryDark"
        />

</RelativeLayout>